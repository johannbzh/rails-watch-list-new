<div class="cover d-flex align-items-center justify-content-center">
  <div class="text-center">
    <h1>Your whishlist app</h1>
  </div>
</div>

<div class="container">

  <div class="d-flex align-items-center justify-content-between mt-3">
    <p>My lists</p>
    <%= link_to "New list", new_list_path, class:'btn btn-flat' %>
  </div>

  <div class = "cards mt-2">
    <% @lists.each do |list| %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= list.photo.attached? ? cl_image_path(list.photo.key) : asset_path('list_background.jpg') %>)">
        <%= link_to list.name, list_path(list), class: 'card-text' %>
      </div>
    <% end %>
  </div>

</div>




